# Environment variables for production deployment
# Copy this file to .env and fill in your actual values

# Required: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (automatically set by docker-compose)
DATABASE_URL=postgresql+psycopg://superuser:rag-bidding@postgres:5432/ragdb

# Model Configuration
EMBED_MODEL=text-embedding-3-large
LLM_MODEL=gpt-4o-mini
LC_COLLECTION=docs

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
RAG_MODE=balanced  # fast, balanced, quality, adaptive
ENABLE_RERANKING=true
ENABLE_QUERY_ENHANCEMENT=true
ENABLE_ADAPTIVE_RETRIEVAL=true
ENABLE_ENHANCED_PROMPTS=true

# Reranking Configuration
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_DEVICE=cpu  # cpu or cuda (for GPU support)
RERANKER_BATCH_SIZE=32
RERANK_TOP_K=10
FINAL_DOCS_K=5

# Retrieval Configuration
RETRIEVAL_K=5
MIN_RELEVANCE_SCORE=0.7
MAX_ENHANCED_QUERIES=3

# Performance Configuration
PARALLEL_PROCESSING=true
CACHE_EMBEDDINGS=true
MAX_PROCESSING_TIME=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_JSON=false

# Optional: Advanced Features
ENABLE_ANSWER_VALIDATION=false
ENABLE_CONVERSATION_MEMORY=false
CITATION_CHECK=true
FACTUAL_CONSISTENCY_CHECK=false